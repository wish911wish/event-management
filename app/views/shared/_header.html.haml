%header
  .global-menu
    = link_to "event-maneger", root_path, class: "h5 global-menu__title"
    .global-menu__user-info.d-flex.align-items-center
      - if current_user
        = lList_image(current_user)
        = lList_name(current_user)
      - else
        = "ログインはこちら⇨"

  .global-menu__trigger.js-toggle-menu
    .menu-button
      %span.menu-button__1st-bar
      %span.menu-button__2nd-bar
      %span.menu-button__3rd-bar
  .global-menu__background.js-toggle-menu
  .global-menu__body.js-toggle-menu
    %nav.global-menu__nav
      %ul.global-menu__list
        - if current_user
          %li.global-menu__item= link_to "ログアウト", destroy_user_session_path, method: :delete
          %li.global-menu__item= link_to "マイページ", user_path(current_user)
          %li.global-menu__item= link_to "ユーザー情報編集", edit_user_path(current_user)
          %li.global-menu__item= link_to "イベント作成", new_event_path
          %li.global-menu__item= link_to "グループ作成", new_group_path
        - else
          %li.global-menu__item= link_to "ログイン", new_user_session_path
          %li.global-menu__item= link_to "新規登録", new_user_registration_path
