= render "./shared/header"

%body.main
  .event.container.max-w
    .row
      .col-12
        .card.mx-auto.mb-2.border-0.event
          =render "event", event: @event
          - if current_user && @event.user_id == current_user.id
            .author-command
              = link_to "イベントを編集する", edit_event_path(@event), class: "btn mb-2 author-command__edit"
              = link_to "イベントを削除する", "/events/#{@event.id}", method: :delete, class: "btn author-command__delete"

  .container.max-w.mb-2
    .row
      .col-6
        .w-50.mx-auto
          %button.btn.w-100.participation-btn
            参加
      .col-6
        .w-50.mx-auto
          %button.btn.w-100.absence-btn
            不参加
  .container.max-w.mb-2
    .row
      .col-sm-12
        %h5.card-title.text-center.participant-title 参加者
        .participant
          %ul.participant-list
            %li.border-bottom
              その１
            %li.border-bottom
              その２
            %li.border-bottom
              その２
            %li.border-bottom
              その２

= render "./shared/footer"
