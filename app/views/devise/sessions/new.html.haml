= render "./shared/header"
%body.main
  %H1.text-center.create-event__title ログイン
  .container.max-w.mb-2
    .row
      .col-12
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field.mb-2
            = f.label :email do
              e-mail
            = f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"
          .field.mb-2
            = f.label :password do
              パスワード
            = f.password_field :password, class: "form-control", autocomplete: "current-password"
          - if devise_mapping.rememberable?
            .field.mb-2
              = f.check_box :remember_me
              = f.label :remember_me
          .actions.mb-2
          = f.submit "ログイン", class: "btn w-100 participation-btn"
= render "./shared/footer"


